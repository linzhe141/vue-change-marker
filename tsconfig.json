{
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "target": "ESNext",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "vue-scan": ["./packages/core/index.ts"]
    }
  }
}
